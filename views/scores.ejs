<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="css/styles.css">
    <title>Scores</title>
  </head>
  <body>
    <div class="container">
      <h1>High Scores</h1>

      <table>
        <tr>
          <th>Name</th>
          <th>Score</th>
        </tr>
        <% scores.forEach(function(game){ %>
          <tr>
            <td><%= game.name %></td>
            <td><%= game.score %></td>
          </tr>
        <% }); %>
      </table>
      <a href="/scores/game">Retry</a>
    </div>
  </body>
</html>
